{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react-jsx", // This enables JSX support in TypeScript
        "esModuleInterop": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ], // Include all source files in the src directory
    "exclude": [
        "node_modules"
    ] // Exclude node_modules folder
}